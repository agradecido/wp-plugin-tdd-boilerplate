{
  "name": "vendor-name/plugin-name",
  "description": "Boilerplate for WordPress plugin development using TDD principles",
  "type": "wordpress-plugin",
  "autoload": {
    "psr-4": {
      "VendorName\\PluginName\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VendorName\\PluginName\\Tests\\": "tests/"
    }
  },
  "require": {},
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.13",
    "wp-coding-standards/wpcs": "^3.2",
    "php-stubs/wordpress-stubs": "^6.8",
    "phpunit/phpunit": "^9.6",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.6",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "phpcs": "vendor/bin/phpcs --standard=./phpcs.xml",
    "phpcbf": "vendor/bin/phpcbf --standard=./phpcs.xml",
    "phpcs-report": "vendor/bin/phpcs --standard=./phpcs.xml --report=summary",
    "fix-code": "vendor/bin/phpcbf --standard=./phpcs.xml .",
    "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon",
    "test": "vendor/bin/phpunit",
    "test:unit": "vendor/bin/phpunit --testsuite=unit",
    "test:integration": "vendor/bin/phpunit --testsuite=integration",
    "test:coverage": "vendor/bin/phpunit --coverage-html coverage-report",
    "test:watch": "vendor/bin/phpunit --watch"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}